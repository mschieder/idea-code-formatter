<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.github.mschieder</groupId>
        <artifactId>idea-code-formatter-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>idea-code-formatter-lib</artifactId>

    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.5.2</version>
                <configuration>
                    <groupId>com.intellij</groupId>
                    <version>${idea.version}</version>
                    <packaging>jar</packaging>
                </configuration>
                <executions>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <id>3rd-party-rt</id>
                        <configuration>
                            <file>../idea-code-formatter/downloaded_jars/ide/lib/3rd-party-rt.jar</file>
                            <artifactId>3rd-party-rt</artifactId>
                        </configuration>
                    </execution>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <id>app</id>
                        <configuration>
                            <file>../idea-code-formatter/downloaded_jars/ide/lib/app.jar</file>
                            <artifactId>app</artifactId>
                        </configuration>
                    </execution>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <id>external-system-rt</id>
                        <configuration>
                            <file>../idea-code-formatter/downloaded_jars/ide/lib/external-system-rt.jar</file>
                            <artifactId>external-system-rt</artifactId>
                        </configuration>
                    </execution>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <id>forms_rt</id>
                        <configuration>
                            <file>../idea-code-formatter/downloaded_jars/ide/lib/forms_rt.jar</file>
                            <artifactId>forms_rt</artifactId>
                        </configuration>
                    </execution>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <id>groovy</id>
                        <configuration>
                            <file>../idea-code-formatter/downloaded_jars/ide/lib/groovy.jar</file>
                            <artifactId>groovy</artifactId>
                        </configuration>
                    </execution>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <id>jps-model</id>
                        <configuration>
                            <file>../idea-code-formatter/downloaded_jars/ide/lib/jps-model.jar</file>
                            <artifactId>jps-model</artifactId>
                        </configuration>
                    </execution>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <id>protobuf</id>
                        <configuration>
                            <file>../idea-code-formatter/downloaded_jars/ide/lib/protobuf.jar</file>
                            <artifactId>protobuf</artifactId>
                        </configuration>
                    </execution>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <id>rd</id>
                        <configuration>
                            <file>../idea-code-formatter/downloaded_jars/ide/lib/rd.jar</file>
                            <artifactId>rd</artifactId>
                        </configuration>
                    </execution>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <id>stats</id>
                        <configuration>
                            <file>../idea-code-formatter/downloaded_jars/ide/lib/stats.jar</file>
                            <artifactId>stats</artifactId>
                        </configuration>
                    </execution>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <id>util</id>
                        <configuration>
                            <file>../idea-code-formatter/downloaded_jars/ide/lib/util.jar</file>
                            <artifactId>util</artifactId>
                        </configuration>
                    </execution>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <id>util_rt</id>
                        <configuration>
                            <file>../idea-code-formatter/downloaded_jars/ide/lib/util_rt.jar</file>
                            <artifactId>util_rt</artifactId>
                        </configuration>
                    </execution>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <id>util-8</id>
                        <configuration>
                            <file>../idea-code-formatter/downloaded_jars/ide/lib/util-8.jar</file>
                            <artifactId>util-8</artifactId>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.0.0</version>

                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>

    </build>

</project>