<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.github.mschieder</groupId>
        <artifactId>idea-code-formatter-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>idea-code-formatter-lib</artifactId>

    <dependencies>
        <dependency>
            <groupId>com.intellij</groupId>
            <artifactId>3rd-party-rt</artifactId>
            <version>${idea.version}</version>
            <scope>system</scope>
            <systemPath>${basedir}/../idea-code-formatter/downloaded_jars/ide/lib/3rd-party-rt.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.intellij</groupId>
            <artifactId>app</artifactId>
            <version>${idea.version}</version>
            <scope>system</scope>
            <systemPath>${basedir}/../idea-code-formatter/downloaded_jars/ide/lib/app.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.intellij</groupId>
            <artifactId>external-system-rt</artifactId>
            <version>${idea.version}</version>
            <scope>system</scope>
            <systemPath>${basedir}/../idea-code-formatter/downloaded_jars/ide/lib/external-system-rt.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.intellij</groupId>
            <artifactId>forms_rt</artifactId>
            <version>${idea.version}</version>
            <scope>system</scope>
            <systemPath>${basedir}/../idea-code-formatter/downloaded_jars/ide/lib/forms_rt.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.intellij</groupId>
            <artifactId>groovy</artifactId>
            <version>${idea.version}</version>
            <scope>system</scope>
            <systemPath>${basedir}/../idea-code-formatter/downloaded_jars/ide/lib/groovy.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.intellij</groupId>
            <artifactId>jps-model</artifactId>
            <version>${idea.version}</version>
            <scope>system</scope>
            <systemPath>${basedir}/../idea-code-formatter/downloaded_jars/ide/lib/jps-model.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.intellij</groupId>
            <artifactId>protobuf</artifactId>
            <version>${idea.version}</version>
            <scope>system</scope>
            <systemPath>${basedir}/../idea-code-formatter/downloaded_jars/ide/lib/protobuf.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.intellij</groupId>
            <artifactId>rd</artifactId>
            <version>${idea.version}</version>
            <scope>system</scope>
            <systemPath>${basedir}/../idea-code-formatter/downloaded_jars/ide/lib/rd.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.intellij</groupId>
            <artifactId>stats</artifactId>
            <version>${idea.version}</version>
            <scope>system</scope>
            <systemPath>${basedir}/../idea-code-formatter/downloaded_jars/ide/lib/stats.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.intellij</groupId>
            <artifactId>util</artifactId>
            <version>${idea.version}</version>
            <scope>system</scope>
            <systemPath>${basedir}/../idea-code-formatter/downloaded_jars/ide/lib/util.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.intellij</groupId>
            <artifactId>util_rt</artifactId>
            <version>${idea.version}</version>
            <scope>system</scope>
            <systemPath>${basedir}/../idea-code-formatter/downloaded_jars/ide/lib/util_rt.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.intellij</groupId>
            <artifactId>util-8</artifactId>
            <version>${idea.version}</version>
            <scope>system</scope>
            <systemPath>${basedir}/../idea-code-formatter/downloaded_jars/ide/lib/util-8.jar</systemPath>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <descriptors>
                        <descriptor>src/assembly/assembly.xml</descriptor>
                    </descriptors>
                    <appendAssemblyId>false</appendAssemblyId>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>